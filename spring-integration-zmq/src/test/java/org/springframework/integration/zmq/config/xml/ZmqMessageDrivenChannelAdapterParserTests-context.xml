<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:int="http://www.springframework.org/schema/integration"
	   xmlns:int-zmq="http://www.springframework.org/schema/integration/zmq"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/zmq http://www.springframework.org/schema/integration/zmq/spring-integration-zmq.xsd">

	<int:channel id="out"/>

	<int-zmq:message-driven-channel-adapter id="noTopicsAdapter"
			client-id="clientId1"
			auto-startup="false"
			url="tcp://localhost:5559"
			client-factory="inClientFactory1"
			recovery-interval="5000"
			channel="out"/>

	<int-zmq:message-driven-channel-adapter id="noTopicsAdapterDefaultCF"
											auto-startup="false"
											client-id="clientId2"
											url="tcp://localhost:5559"
											channel="out"/>

	<int-zmq:message-driven-channel-adapter id="oneTopicAdapter"
											auto-startup="false"
											client-id="clientId4"
											url="tcp://localhost:5559"
											topic="zmq-foo"
											converter="myConverter"
											client-factory="inClientFactory1"
											error-channel="errors"
											channel="out"/>

	<bean id="inClientFactory1"
		class="org.springframework.integration.zmq.core.DefaultZmqClientFactory">
				<constructor-arg>
			<value type="org.zeromq.SocketType">SUB</value>
		</constructor-arg>
	</bean>

	<bean id="myConverter" class="org.springframework.integration.zmq.support.DefaultZmqMessageConverter"/>

	<int:channel id="out"/>

	<int:channel id="errors"/>
</beans>
